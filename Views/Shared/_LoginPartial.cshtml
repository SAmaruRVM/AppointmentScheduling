@inject Microsoft.AspNetCore.Identity.SignInManager<AppointmentScheduling.Models.ApplicationUser> signInManager

@if ((signInManager.IsSignedIn(User)))
{
    <ul class="nav navbar-nav">
        <li class="nav-item">
            <form id="logoutForm" asp-controller="account" asp-action="LogOff" method="POST">
                <ul class="nav navbar-nav">
                    <li class="nav-item text-white">Hello, @User.Identity.Name!</li>
                    <li class="nav-item">
                        <button type="submit" class="text-white nav-link">
                            Logout
                        </button>
                    </li> 
                </ul>
            </form>
        </li>
    </ul>
}
else
{
<ul class="nav navbar-nav">
    <li class="nav-item"><a asp-controller="Account" asp-action="Register" id="registerLink" class="text-white nav-link">SignUp</a></li>
    <li class="nav-item"><a asp-controller="Account" asp-action="Login" id="loginLink" class="text-white nav-link">SignIn</a></li>
</ul>
}

