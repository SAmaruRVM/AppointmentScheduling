<div class="modal fade" role="dialog" id="appointmentInput" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" id="appointmentForm" autocomplete="off" novalidate="novalidate">
                <div class="modal-header">
                    <h4 class="modal-title">Add/Edit appointment</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>
                            Title
                            <input type="text" maxlength="100" class="form-control" />

                        </label>
                    </div>
                    <div class="form-group">
                        <label>
                            Description
                            <textarea class="form-control"></textarea>

                        </label>
                    </div>
                    <div class="form-group">
                        <label>
                            Select patient
                            <select class="form-control" asp-items='@new SelectList(ViewBag.Patients, "ID", "Name")'>
                            </select>
                        </label>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>